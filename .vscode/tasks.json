{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc 生成活动文件",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "-Iinclude",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 生成活动文件",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include",  // 添加头文件搜索路径
                "${workspaceFolder}/src/*.cpp", // 编译 src 目录下所有 .cpp 文件
                "-o",
                "${workspaceFolder}/build/proxy_server" // 输出到 build 目录
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },        
    ]
}